@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p id="counter">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Increment count</button>

@code {
    private int currentCount;

    private void IncrementCount()
    {
        currentCount++;
    }
}
